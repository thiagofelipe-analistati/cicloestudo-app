// src/prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String         @id @default(uuid())
  email     String         @unique
  password  String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  disciplinas Disciplina[]
  topicos     Topico[]
  sessoes     SessaoEstudo[]
}

model Disciplina {
  id        String         @id @default(uuid())
  nome      String
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt
  topicos   Topico[]
  sessoes   SessaoEstudo[]
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
}

model Topico {
  id              String         @id @default(uuid())
  nome            String
  urlEstudo       String?
  comentarios     String?
  totalQuestoes   Int            @default(0)
  acertosQuestoes Int            @default(0)
  errosQuestoes   Int            @default(0)
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  disciplina      Disciplina     @relation(fields: [disciplinaId], references: [id], onDelete: Cascade)
  disciplinaId    String
  sessoes         SessaoEstudo[]
  user            User           @relation(fields: [userId], references: [id])
  userId          String
}

model SessaoEstudo {
  id              String    @id @default(uuid())
  data            DateTime
  tempoEstudado   Int
  categoria       String
  totalQuestoes   Int?
  acertosQuestoes Int?
  errosQuestoes   Int?
  paginasLidas    Int?
  comentarios     String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  disciplina      Disciplina @relation(fields: [disciplinaId], references: [id], onDelete: Cascade)
  disciplinaId    String
  topico          Topico?    @relation(fields: [topicoId], references: [id], onDelete: SetNull)
  topicoId        String?
  user            User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId          String
}